<section class="contact" id="contact">
    {% if success is not null %}
        <div class="alert alert-success" role="alert">
            <strong>Votre message a bien été envoyé !</strong>
        </div>
    {% endif %}
        <h2 class="contact-title">Contact</h2>
    <form method="post" action="#contact" class="form-home-page">
            <div class="form-row">
                <div class="form-group col-md-6 col-12">
                    <label for="lastname">Nom</label>
                    <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Doe" required>
                    {% if errors.lastname is not null %}
                        <ul class="alert alert-danger">
                            <li>{{ errors.lastname }}</li>
                        </ul>
                    {% endif %}
                </div>
                <div class="form-group col-md-6 col-12">
                    <label for="firstname">Prénom</label>
                    <input type="text" name="firstname" class="form-control" id="firstname" placeholder="John" required>
                    {% if errors.firstname is not null %}
                        <ul class="alert alert-danger">
                            <li>{{ errors.firstname }}</li>
                        </ul>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="mail">Adresse mail</label>
                <input type="email" name="mail" class="form-control" id="mail" placeholder="name@example.com" required>
                {% if errors.mail is not null %}
                    <ul class="alert alert-danger">
                        <li>{{ errors.mail }}</li>
                    </ul>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="subject"></label>
                <select class="form-control" name="subject" id="subject">
                    <option>Selectionnez une option</option>
                    <option>Information</option>
                    <option>Prendre un rendez-vous</option>
                </select>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" name="message" id="message" rows="6" required></textarea>
                {% if errors.message is not null %}
                    <ul class="alert alert-danger">
                        <li>{{ errors.message }}</li>
                    </ul>
                {% endif %}
            </div>
            <div class="button_submit">
                <button type="submit" name="submit" value='Submit' class="btn btn-primary">Envoyer</button>
            </div>
        </form>
    </section>

